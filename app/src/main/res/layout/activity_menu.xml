<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundBlue"
        android:id="@+id/start_frame"
        tools:context=".MenuActivity">


    <Button
            android:text="VG3"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:id="@+id/btnVG3"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="105dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="106dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="130dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="VG2"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:background="@color/white"
            android:id="@+id/btnVG2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="105dp" android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/btnVG3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="106dp"/>
    <ImageView
            android:layout_width="302dp"
            android:layout_height="200dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" android:layout_marginEnd="68dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="61dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="67dp"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:id="@+id/btnVG1"
            android:text="VG1"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="105dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="106dp" android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/btnVG2"/>
    <android.support.design.widget.BottomNavigationView
            android:layout_width="411dp"
            android:layout_height="72dp"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="3dp" app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/navigation" android:id="@+id/bottomNav"/>

</android.support.constraint.ConstraintLayout>