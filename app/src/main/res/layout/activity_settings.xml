<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundBlue"
        android:id="@+id/start_frame"
        tools:context=".databaseClasses.SettingsActivity">


    <EditText
            android:id="@+id/dbAge"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="9dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintHorizontal_bias="0.626"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnInsert"/>
    <ImageView
            android:layout_width="302dp"
            android:layout_height="200dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" android:layout_marginEnd="68dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="61dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="67dp"/>

    <EditText
            android:id="@+id/dbName"
            android:layout_width="250dp"
            android:textColor="@color/white"
            android:layout_height="57dp"
            android:layout_margin="10dp"
            android:padding="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="9dp"
            app:layout_constraintHorizontal_bias="0.626"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/dbAge"/>

    <Button
            android:id="@+id/btnInsert"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:padding="10dp"
            android:text="Legg til"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/showRes"/>

    <TextView
            android:id="@+id/showRes"
            android:layout_width="290dp"
            android:layout_height="87dp"
            android:textSize="20dp"
            android:textColor="@color/white"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="556dp"
            app:layout_constraintHorizontal_bias="0.495"/>


    <android.support.design.widget.BottomNavigationView
            android:layout_width="411dp"
            android:layout_height="72dp"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="3dp" app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/navigation" android:id="@+id/bottomNav"/>
    <TextView
            android:text="Skriv inn navn og alder for Ã¥ registrere deg! Rist telefonen for en vits"
            android:layout_width="265dp"
            android:layout_height="82dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:id="@+id/txtInfo" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="175dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="177dp"
            app:layout_constraintBottom_toTopOf="@+id/dbName"
            app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="Navn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/txtName" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
    />
    <TextView
            android:text="Alder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/txtAge" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtName"/>

</android.support.constraint.ConstraintLayout>